<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        Label:
            text: "Thank you for signing up. Your sign up successful. Please try logging in."
            font_size: "20sp"
        RelativeLayout:
            Button:
                text: "Login Page"
                size_hint: 0.4, 0.3
                pos_hint : {'center_x': 0.5, 'center_y': 0.6}
                font_size: "20sp"
                on_press: root.go_to_login()

