#:kivy 2.0

<LogInScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "USER LOGIN"
                font_size: "20sp"
            Label:
                id: username_label
                size_hint_y: None
                text: "Username" if (root.ids.username.focus == True) or (root.ids.username.text) else ""
                font_size: "20sp"
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            TextInput:
                id: username
                hint_text: "Username"
                hint_text_color: [0, 0, 0, 0] if self.focus == True else [0, 0, 0, 1]
                multiline: False
                font_size: "20sp"
                size_hint_y: None
                height: 125
            Label:
                id: password_label
                size_hint_y: None
                text: "Password" if (root.ids.password.focus == True) or (root.ids.password.text) else ""
                font_size: "20sp"
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            TextInput:
                id: password
                password: True
                hint_text: "Password"
                hint_text_color: [0, 0, 0, 0] if self.focus == True else [0, 0, 0, 1]
                multiline: False
                font_size: "20sp"
                size_hint_y: None
                height: 125
            RelativeLayout:
                Button:
                    text: "LOGIN"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint : {'center_x': 0.5, 'center_y': 0.6}
                    font_size: "20sp"
            Label:
                id: login_wrong
                text: ""
                font_size: "20sp"
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7, 1, 1
                font_size: "20sp"
                on_press: root.forget_password()
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7, 1, 1
                font_size: "20sp"
                on_press: root.sign_up()

